<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lab_1_LoginPage"
        tools:targetApi="31">

        <!-- Các activity khác -->
        <activity
            android:name=".PayPalPaymentActivity"
            android:exported="false"/>
        <activity
            android:name=".ChatActivity"
            android:exported="false"/>
        <activity
            android:name=".signup_page"
            android:exported="false"/>
        <activity
            android:name=".MenuActivity"
            android:exported="false"/>
        <activity
            android:name=".CheckoutActivity"
            android:exported="false"/>
        <activity
            android:name=".OrderHistoryActivity"
            android:exported="false"/>
        <activity
            android:name=".OrderDetailsActivity"
            android:exported="false"/>
        <activity
            android:name=".SuccessActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="yourapp" android:host="success"/>
            </intent-filter>
        </activity>

        <!-- Đặt login_page là màn hình khởi chạy -->
        <activity
            android:name=".login_page"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- main_screen không còn là activity khởi chạy -->
        <activity
            android:name=".main_screen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="yourapp" android:host="paypal_cancel"/>
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAE0NT5aXE2yylpTnOq_qqPQGHfo4dPUzg"/>
    </application>

</manifest>
